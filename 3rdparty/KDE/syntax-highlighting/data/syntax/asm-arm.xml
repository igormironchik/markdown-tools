        <RegExpr attribute="Normal Text" context="#stay" String="[a-zA-Z_][a-zA-Z0-9_]*" />
      </context>

      <context attribute="CheckCondition" lineEndContext="#pop" name="CheckCondition" fallthroughContext="#pop">
        <keyword attribute="Condition Code" context="#pop" String="Condition Codes" />
